<!doctype html>
<html>
  <%= partial 'shared/head' %>
  <body class="<%= page_classes %>">
    <%= partial 'shared/nav' %>
    <div class="max-width-4 mx-auto">
      <div class="p2">
        <h2 class="regular my0 steel-body muted">
          <i class="fa fa-file-text"></i>
        </h2>
        <h1 class="mt0 mb3 steel-heading">Documentation</h1>
		<ul>
			<li>v1.x</li>
			<li><a href="/docs">v2.x</a></li>
		</ul>
        <div class="sm-flex">
          <div class="col-12 sm-col-3 sm-pr3">
            <div id="toc">
              <%= partial 'shared/docs-toc' %>
            </div>
          </div>
          <div class="col-12 sm-col-9">
            <% if !current_article.nil? %>
              <h2 class="regular"><%= current_article.metadata[:page][:title] %></h2>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= partial 'shared/footer' %>
    <%= javascript_include_tag :docs %>
    <%= partial 'shared/ga' %>
  </body>
</html>
